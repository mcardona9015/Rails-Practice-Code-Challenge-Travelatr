<h1>Edit Post</h1>
<% if flash[:messages]%>
    <% flash[:messages].each do |message| %>
        <p style="color:red"><%= message %></p>
    <%end%>
<%end%>

<%= form_for(@post) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title%>
    <%= f.label :content %>
    <%= f.text_field :content%>
    <%= f.label :blogger_id%>
    <%= f.collection_select :blogger_id, Blogger.all, :id, :name%>
    <%= f.label :destination_id%>
    <%= f.collection_select :destination_id, Destination.all, :id, :name%>
    <%= f.submit %>
<% end %>